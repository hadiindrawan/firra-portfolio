<svg width="600" height="400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f0f9ff;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#e0f2fe;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#bae6fd;stop-opacity:1" />
    </linearGradient>
  </defs>
  <rect width="600" height="400" fill="url(#bg)"/>
  
  <!-- Training room elements -->
  <!-- Table/desk -->
  <rect x="50" y="300" width="500" height="20" rx="10" fill="#0369a1" opacity="0.3"/>
  
  <!-- Presentation board -->
  <rect x="100" y="80" width="200" height="150" rx="10" fill="#ffffff" stroke="#0369a1" stroke-width="3" opacity="0.9"/>
  
  <!-- Board content -->
  <line x1="120" y1="110" x2="280" y2="110" stroke="#0ea5e9" stroke-width="2"/>
  <line x1="120" y1="130" x2="250" y2="130" stroke="#0ea5e9" stroke-width="2"/>
  <line x1="120" y1="150" x2="270" y2="150" stroke="#0ea5e9" stroke-width="2"/>
  <circle cx="140" cy="180" r="8" fill="#0ea5e9" opacity="0.7"/>
  <circle cx="180" cy="180" r="8" fill="#0ea5e9" opacity="0.7"/>
  <circle cx="220" cy="180" r="8" fill="#0ea5e9" opacity="0.7"/>
  
  <!-- Charts/graphs on board -->
  <polyline points="120,200 140,190 160,180 180,185 200,175 220,170" 
            stroke="#0284c7" stroke-width="3" fill="none"/>
  
  <!-- People silhouettes (training participants) -->
  <g transform="translate(350, 200)">
    <!-- Person 1 -->
    <circle cx="30" cy="20" r="15" fill="#075985" opacity="0.6"/>
    <rect x="20" y="30" width="20" height="40" rx="10" fill="#075985" opacity="0.6"/>
    
    <!-- Person 2 -->
    <circle cx="80" cy="20" r="15" fill="#075985" opacity="0.6"/>
    <rect x="70" y="30" width="20" height="40" rx="10" fill="#075985" opacity="0.6"/>
    
    <!-- Person 3 -->
    <circle cx="130" cy="20" r="15" fill="#075985" opacity="0.6"/>
    <rect x="120" y="30" width="20" height="40" rx="10" fill="#075985" opacity="0.6"/>
  </g>
  
  <!-- Learning materials -->
  <rect x="400" y="100" width="15" height="20" fill="#0ea5e9" opacity="0.7"/>
  <rect x="420" y="95" width="15" height="25" fill="#0ea5e9" opacity="0.7"/>
  <rect x="440" y="90" width="15" height="30" fill="#0ea5e9" opacity="0.7"/>
  
  <!-- Decorative elements -->
  <circle cx="500" cy="60" r="4" fill="#7dd3fc" opacity="0.8"/>
  <circle cx="80" cy="50" r="3" fill="#7dd3fc" opacity="0.8"/>
  <circle cx="520" cy="350" r="5" fill="#7dd3fc" opacity="0.8"/>
  
  <!-- Knowledge sharing icons -->
  <g transform="translate(480, 150)">
    <!-- Light bulb -->
    <circle cx="15" cy="15" r="12" fill="#fbbf24" opacity="0.8"/>
    <rect x="10" y="24" width="10" height="8" fill="#f59e0b" opacity="0.8"/>
    <line x1="8" y1="8" x2="12" y2="12" stroke="#fff" stroke-width="1"/>
    <line x1="18" y1="12" x2="22" y2="8" stroke="#fff" stroke-width="1"/>
    <line x1="15" y1="5" x2="15" y2="10" stroke="#fff" stroke-width="1"/>
  </g>
  
  <!-- Text -->
  <text x="300" y="360" text-anchor="middle" font-family="Arial, sans-serif" font-size="24" font-weight="bold" fill="#0369a1">Professional Training Environment</text>
  <text x="300" y="385" text-anchor="middle" font-family="Arial, sans-serif" font-size="16" fill="#075985" opacity="0.8">Learning &amp; Development Excellence</text>
</svg>